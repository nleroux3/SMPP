 program main_main
 integer*2 :: counter
  call system("make clean && make")

  !$OMP PARALLEL
 
  open(counter,file='../snow_layers.txt', access="direct", form="formatted", action="readwrite", recl=3 )
  
  	  
  !$OMP DO 
  
  DO counter=11,15
 	write(counter,'(I3)',rec=28) counter
 	write(counter,'(I3)',rec=40) counter
 	 	close(counter)

 	call system("./prog")
 	
 ENDDO

 !$OMP END PARALLEL DO

 
 END PROGRAM